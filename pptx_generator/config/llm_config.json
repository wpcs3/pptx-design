{
  "version": "1.0.0",
  "description": "LLM configuration for pptx_generator Phase 1",
  "defaults": {
    "model": "gemini-3-flash-preview",
    "use_litellm": true,
    "tone": "professional",
    "verbosity": "standard",
    "max_tokens": 4096,
    "temperature": 0.7
  },
  "tone_options": {
    "default": {
      "description": "No specific tone modification",
      "use_case": "General purpose generation"
    },
    "professional": {
      "description": "Formal business language with precise terminology",
      "use_case": "Investor presentations, board materials"
    },
    "casual": {
      "description": "Conversational, approachable language",
      "use_case": "Internal team presentations, informal updates"
    },
    "sales_pitch": {
      "description": "Persuasive language with clear calls to action",
      "use_case": "Sales decks, marketing materials"
    },
    "educational": {
      "description": "Clear explanations with examples",
      "use_case": "Training materials, onboarding"
    },
    "executive": {
      "description": "Concise, strategic, focused on business impact",
      "use_case": "C-suite presentations, executive summaries"
    }
  },
  "verbosity_options": {
    "concise": {
      "description": "Extremely brief, bullet-focused",
      "max_bullets_per_slide": 4,
      "max_words_per_bullet": 8
    },
    "standard": {
      "description": "Balanced detail with complete sentences",
      "max_bullets_per_slide": 6,
      "max_words_per_bullet": 15
    },
    "detailed": {
      "description": "Comprehensive coverage with supporting context",
      "max_bullets_per_slide": 10,
      "max_words_per_bullet": 35
    },
    "dense": {
      "description": "Maximum content density for written materials consumption",
      "max_bullets_per_slide": 12,
      "max_words_per_bullet": 50
    }
  },
  "recommended_models": {
    "high_quality": {
      "model": "gemini-3-pro-preview",
      "description": "Best for extended thinking and complex writing tasks",
      "cost": "medium"
    },
    "fast_iteration": {
      "model": "gemini-3-flash-preview",
      "description": "Fast and inexpensive for lower-level work",
      "cost": "low"
    },
    "budget_friendly": {
      "model": "gemini-3-flash-preview",
      "description": "Cost-effective for bulk generation",
      "cost": "low"
    },
    "local": {
      "model": "ollama-llama3.2",
      "description": "Free local generation (requires Ollama running)",
      "cost": "free"
    }
  },
  "presentation_type_settings": {
    "investment_pitch": {
      "recommended_tone": "professional",
      "recommended_verbosity": "standard",
      "model_recommendation": "high_quality"
    },
    "market_analysis": {
      "recommended_tone": "professional",
      "recommended_verbosity": "detailed",
      "model_recommendation": "high_quality"
    },
    "internal_update": {
      "recommended_tone": "casual",
      "recommended_verbosity": "concise",
      "model_recommendation": "fast_iteration"
    },
    "executive_summary": {
      "recommended_tone": "executive",
      "recommended_verbosity": "concise",
      "model_recommendation": "high_quality"
    }
  }
}

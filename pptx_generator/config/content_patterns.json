  "outline_schema": {
    "description": "Schema for slide content in outline JSON files",
    "slide_content_fields": {
      "common": {
        "title": "Slide title text",
        "subtitle": "Subtitle or subheading (optional)",
        "narrative": "Footer/source note (optional)"
      },
      "title_content": {
        "bullets": ["Array of bullet point strings"]
      },
      "two_column": {
        "left_column": {"header": "string", "bullets": ["array"]},
        "right_column": {"header": "string", "bullets": ["array"]}
      },
      "data_chart": {
        "chart_data": {
          "type": "column | bar | line | pie | waterfall",
          "categories": ["X-axis labels"],
          "series": [{"name": "Series name", "values": [1, 2, 3]}]
        },
        "library_component_id": "Optional: ID from ComponentLibrary to use exact chart from templates"
      },
      "table_slide": {
        "headers": ["Column headers"],
        "data": [["Row 1 values"], ["Row 2 values"]],
        "library_component_id": "Optional: ID from ComponentLibrary to use exact table from templates",
        "use_library": "Optional: Set to true to auto-match a library component"
      },
      "key_metrics": {
        "metrics": [{"label": "Metric name", "value": "$100M"}]
      }
    },
    "library_integration": {
      "description": "Use library_component_id to pull exact charts/tables from analyzed template slides",
      "finding_component_ids": "Run 'python -m pptx_generator list-library charts' or 'list-library tables'",
      "example": {
        "slide_type": "data_chart",
        "content": {
          "title": "Revenue Growth",
          "library_component_id": "chart_template_market_analysis_12_0"
        }
      }
    }
  }
